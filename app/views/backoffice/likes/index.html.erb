<h1 class="page-header">Likes</h1>
<%= link_to "Create new like", new_backoffice_like_path %>
<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Member</th>
                <th>Comment</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
          <% @likes.each do |like| %>
            <tr>
              <td><%= like.id %></td>
              <td><%= like.member.name %></td>
              <td><%= like.comment.text %></td>
              <td>
                <%= link_to edit_backoffice_like_path(like), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to backoffice_like_path(like), class: "btn btn-danger btn-circle", method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-times"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
