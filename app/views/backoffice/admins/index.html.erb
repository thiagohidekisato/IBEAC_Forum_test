<h1 class="page-header">Admins</h1>
<%= link_to "Create new admin", new_backoffice_admin_path %>
<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>E-mail</th>
                <th>Access</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.name %></td>
              <td><%= admin.email %></td>
              <td><%= admin.role %></td>
              <td>
                <% if current_admin.id == admin.id%>
                  <%= link_to edit_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                <% end %>
                <% if current_admin.id != admin.id && current_admin.role == "full_access"%>
                  <%= link_to backoffice_admin_path(admin), class: "btn btn-danger btn-circle", method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
