<h1 class="page-header"><%= action %></h1>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for([:backoffice, @admin]) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, class:"form-control", placeholder:"Name admin" %>
        </div>
        <div class="form-group">
          <label>E-mail</label>
          <%= f.text_field :email, class:"form-control", placeholder:"E-mail admin" %>
        </div>
        <div class="form-group">
          <label>Password</label>
          <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
        </div>
        <div class="form-group">
          <label>Password confirmation</label>
          <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Password confirmation" %>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
      <% end %>
    </div>
  </div>
  <!-- /.panel-body -->
</div>
