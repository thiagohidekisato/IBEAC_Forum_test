<h1 class="page-header">Categories</h1>
<%= link_to "Create new category", new_backoffice_category_path %>
<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.description %></td>
              <td>
                <%= link_to edit_backoffice_category_path(category), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to backoffice_category_path(category), class: "btn btn-danger btn-circle", method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-times"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
